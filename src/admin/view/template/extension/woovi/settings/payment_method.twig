<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <i class="fa fa-pencil"></i>

            {{ lang_panel_heading_title }}
        </h3>
    </div>

    <div class="panel-body">
        <!-- Payment method status -->
        <div class="form-group">
            <label
                for="input-{{ setting_group }}-status"
                class="col-sm-2 control-label"
            >
                {{ lang["Status"] }}
            </label>
            <div class="col-sm-10">
                <select
                    name="settings[{{ setting_group }}][status]"
                    id="input-{{ setting_group }}-status"
                    class="form-control"
                >
                    {% if settings[setting_group]["status"] %}
                        <option
                            value="1"
                            selected="selected"
                        >
                            {{ text_enabled }}
                        </option>
                        <option value="0">
                            {{ text_disabled }}
                        </option>
                    {% else %}
                        <option value="1">{{ text_enabled }}</option>
                        <option
                            value="0"
                            selected="selected"
                        >
                            {{ text_disabled }}
                        </option>
                    {% endif %}
                </select>
            </div>
        </div>

        <!-- Payment method title -->
        <div class="form-group">
            <label
                for="input-{{ setting_group }}-payment-method-title"
                class="col-sm-2 control-label"
            >
                {{ lang["Payment method title"] }}
            </label>
            <div class="col-sm-10">
                <input
                    type="text"
                    name="settings[{{ setting_group }}][payment_method_title]"
                    value="{{ settings[setting_group]["payment_method_title"] }}"
                    placeholder="{{ lang["Payment method title"] }}"
                    id="input-{{ setting_group }}-payment-method-title"
                    class="form-control"
                />
            </div>
        </div>

        <!-- Order Status after creating a order -->
        <div class="form-group">
            <label
                for="input-{{ setting_group }}-order-status"
                class="col-sm-2 control-label"
            >
                {{ lang["Change order status after issuing the pix to:"] }}
            </label>
            <div class="col-sm-10">
                <select
                    name="settings[{{ setting_group }}][order_status_when_waiting_id]"
                    id="input-{{ setting_group }}-order-status"
                    class="form-control"
                >
                    {% for order_status in order_statuses %}
                        <option
                            value="{{ order_status.order_status_id }}"
                            {% if order_status.order_status_id == settings[setting_group]["order_status_when_waiting_id"] %}
                            selected="selected"
                            {% endif %}
                        >
                            {{ order_status.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <!-- Order Status after pix charge is paid -->
        <div class="form-group">
            <label
                for="input-{{ setting_group }}-order-status"
                class="col-sm-2 control-label"
            >
                {{ lang["Change order status after pix charge is paid to:"] }}
            </label>
            <div class="col-sm-10">
                <select
                    name="settings[{{ setting_group }}][order_status_when_paid_id]"
                    id="input-{{ setting_group }}-order-status"
                    class="form-control"
                >
                    {% for order_status in order_statuses %}
                        <option
                            value="{{ order_status.order_status_id }}"
                            {% if order_status.order_status_id == settings[setting_group]["order_status_when_paid_id"] %}
                            selected="selected"
                            {% endif %}
                        >
                            {{ order_status.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <!-- Notify customer when order is paid -->
        <div class="form-group">
            <label
                for="input-{{ setting_group }}-notify-customer"
                class="col-sm-2 control-label"
            >
                {{ lang["Notify customer when order is paid?"] }}
            </label>
            <div class="col-sm-10">
                <select
                    name="settings[{{ setting_group }}][notify_customer]"
                    id="input-{{ setting_group }}-status"
                    class="form-control"
                >
                    {% if settings[setting_group]["notify_customer"] %}
                        <option
                            value="1"
                            selected="selected"
                        >
                            {{ text_yes }}
                        </option>
                        <option value="0">
                            {{ text_no }}
                        </option>
                    {% else %}
                        <option value="1">
                            {{ text_yes }}
                        </option>
                        <option
                            value="0"
                            selected="selected"
                        >
                            {{ text_no }}
                        </option>
                    {% endif %}
                </select>
            </div>
        </div>
    </div>
</div>