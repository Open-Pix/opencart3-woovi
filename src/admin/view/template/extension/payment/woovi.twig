{{ components["header"] }}
{{ components["column_left"] }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <button
                    type="submit"
                    form="form-module"
                    data-bs-toggle="tooltip"
                    title="{{ lang["Save"] }}"
                    class="btn btn-primary"
                >
                    <i class="fa-solid fa-save"></i>
                </button>

                <a
                    href="{{ previous_route }}"
                    data-bs-toggle="tooltip"
                    title="{{ lang["Previous page"] }}"
                    class="btn btn-light"
                >
                    <i class="fa-solid fa-reply"></i>
                </a>
            </div>

            <h1>{{ lang["heading_title"] }}</h1>

            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item">
                        <a href="{{ breadcrumb.href }}">
                            {{ breadcrumb.text }}
                        </a>
                    </li>
                {% endfor %}
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <i class="fa-solid fa-pencil"></i>

                {{ lang["Edit Pix extension"] }}
            </div>

            <div class="card-body">
                <form
                    id="form-module"
                    action="{{ save_route }}"
                    method="post"
                    data-oc-toggle="ajax"
                >
                    <div class="row mb-3">
                        <label for="input-status" class="col-sm-2 col-form-label">
                            {{ lang["Status"] }}
                        </label>
                        <div class="col-sm-10">
                            <div class="form-check form-switch form-switch-lg">
                                <input
                                    type="hidden"
                                    name="payment_woovi_status"
                                    value="0"
                                />

                                <input
                                    type="checkbox"
                                    name="payment_woovi_status"
                                    value="1"
                                    id="input-status"
                                    class="form-check-input"

                                    {% if payment_woovi_status %} checked{% endif %}
                                />
                            </div>

                            <p>
                                {{ lang["Use this Webhook URL to be registered at Woovi:"] }}
                                <a href="{{ woovi_webhook_callback_url }}">
                                    {{ woovi_webhook_callback_url }}
                                </a>
                            </p>

                            <p>
                                {{ lang["Open your account now"] }}
                                <a href="{{ woovi_register_account_url }}">
                                    {{ woovi_register_account_url }}
                                </a>
                            </p>
                            
                            <p>
                                {{ lang["Woovi integration <a href=\"%woovi_opencart_documentation_url%\" target=\"_blank\">documentation</a> with OpenCart"]|replace({'%woovi_opencart_documentation_url%': woovi_opencart_documentation_url}) }}
                            </p> 
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="input-app-id" class="col-sm-2 col-form-label">
                            {{ lang["App ID"] }}
                        </label>
                        <div class="col-sm-10">
                            <input
                                type="text"
                                name="payment_woovi_app_id"
                                value="{{ payment_woovi_app_id }}"
                                placeholder="{{ lang["Enter your Woovi App ID"] }}"
                                id="input-app-id"
                                class="form-control"
                            />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label
                            for="input-order-status"
                            class="col-sm-2 col-form-label"
                        >
                            {{ lang["Change order status after issuing the pix to:"] }}
                        </label>
                        <div class="col-sm-10">
                            <select
                                name="payment_woovi_order_status_when_waiting_id" id="input-order-status"
                                class="form-select"
                            >
                                {% for order_status in order_statuses %}
                                    <option
                                        value="{{ order_status.order_status_id }}"
                                        {% if order_status.order_status_id == payment_woovi_order_status_when_waiting_id %} selected="selected"{% endif %}
                                    >
                                        {{ order_status.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label
                            for="input-order-status"
                            class="col-sm-2 col-form-label"
                        >
                            {{ lang["Change order status after pix charge is paid to:"] }}
                        </label>
                        <div class="col-sm-10">
                            <select
                                name="payment_woovi_order_status_when_paid_id" id="input-order-status"
                                class="form-select"
                            >
                                {% for order_status in order_statuses %}
                                    <option
                                        value="{{ order_status.order_status_id }}"
                                        {% if order_status.order_status_id == payment_woovi_order_status_when_paid_id %} selected="selected"{% endif %}
                                    >
                                        {{ order_status.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label
                            for="input-notify-customer"
                            class="col-sm-2 col-form-label"
                        >
                            {{ lang["Notify customer when order is paid?"] }}
                        </label>
                        <div class="col-sm-10">
                            <div class="form-check form-switch form-switch-lg">
                                <input
                                    type="hidden"
                                    name="payment_woovi_notify_customer"
                                    value="0"
                                />

                                <input
                                    type="checkbox"
                                    name="payment_woovi_notify_customer"
                                    value="1"
                                    id="input-notify-customer"
                                    class="form-check-input"

                                    {% if payment_woovi_notify_customer %} checked{% endif %}
                                />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label
                            for="input-tax-id-custom-field-id"
                            class="col-sm-2 col-form-label"
                        >
                            {{ lang["Which custom field to use for CPF/CNPJ?"] }}
                        </label>
                        <div class="col-sm-10">
                            <select
                                name="payment_woovi_tax_id_custom_field_id" id="input-tax-id-custom-field-id"
                                class="form-select"
                            >
                                <option value="">{{ lang["None"] }}</option>

                                {% for custom_field in custom_fields %}
                                    <option
                                        value="{{ custom_field.custom_field_id }}"
                                        {% if custom_field.custom_field_id == payment_woovi_tax_id_custom_field_id %} selected="selected"{% endif %}
                                    >
                                        {{ custom_field.name }}
                                    </option>
                                {% endfor %}
                            </select>
                            
                            <a href="{{ create_custom_field_route }}">
                                {{ lang["Create an custom field here."] }}
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{ components["footer"] }}
