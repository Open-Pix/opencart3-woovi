{{ components["header"] }}
{{ components["column_left"] }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button
                    type="submit"
                    form="form-payment"
                    data-toggle="tooltip"
                    title="{{ lang["Save"] }}"
                    class="btn btn-primary"
                >
                    <i class="fa fa-save"></i>
                </button>

                <a
                    href="{{ previous_route }}"
                    data-toggle="tooltip"
                    title="{{ lang["Previous page"] }}"
                    class="btn btn-light"
                >
                    <i class="fa fa-reply"></i>
                </a>
            </div>

            <h1>{{ lang["heading_title"] }}</h1>

            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb.href }}">
                            {{ breadcrumb.text }}
                        </a>
                    </li>
                {% endfor %}
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        {% if woovi_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i>
                {{ woovi_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}

        {% if woovi_success %}
            <div class="alert alert-success alert-dismissible">
                <i class="fa fa-exclamation-circle"></i>
                {{ woovi_success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i>

                    {{ lang["Edit Pix extension"] }}
                </h3>
            </div>

            <div class="panel-body">
                <form
                    id="form-payment"
                    action="{{ save_route }}"
                    method="post"
                    class="form-horizontal"
                >
                    <div class="form-group">
                        <label for="input-status" class="col-sm-2 control-label">
                            {{ lang["Status"] }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_woovi_status" id="input-status" class="form-control">
                                {% if payment_woovi_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                 {% endif %}
                            </select>

                            <p>
                                {{ lang["Use this Webhook URL to be registered at Woovi:"] }}
                                <a href="{{ woovi_webhook_callback_url }}">
                                    {{ woovi_webhook_callback_url }}
                                </a>
                            </p>

                            <p>
                                {{ lang["Open your account now"] }}
                                <a href="{{ woovi_register_account_url }}">
                                    {{ woovi_register_account_url }}
                                </a>
                            </p>
                            
                            <p>
                                {{ lang["Woovi integration <a href=\"%woovi_opencart_documentation_url%\" target=\"_blank\">documentation</a> with OpenCart"]|replace({'%woovi_opencart_documentation_url%': woovi_opencart_documentation_url}) }}
                            </p> 
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-app-id" class="col-sm-2 control-label">
                            {{ lang["App ID"] }}
                        </label>
                        <div class="col-sm-10">
                            <input
                                type="text"
                                name="payment_woovi_app_id"
                                value="{{ payment_woovi_app_id }}"
                                placeholder="{{ lang["Enter your Woovi App ID"] }}"
                                id="input-app-id"
                                class="form-control"
                            />
                        </div>
                    </div>

                    <div class="form-group">
                        <label
                            for="input-order-status"
                            class="col-sm-2 control-label"
                        >
                            {{ lang["Change order status after issuing the pix to:"] }}
                        </label>
                        <div class="col-sm-10">
                            <select
                                name="payment_woovi_order_status_when_waiting_id" id="input-order-status"
                                class="form-control"
                            >
                                {% for order_status in order_statuses %}
                                    <option
                                        value="{{ order_status.order_status_id }}"
                                        {% if order_status.order_status_id == payment_woovi_order_status_when_waiting_id %} selected="selected"{% endif %}
                                    >
                                        {{ order_status.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label
                            for="input-order-status"
                            class="col-sm-2 control-label"
                        >
                            {{ lang["Change order status after pix charge is paid to:"] }}
                        </label>
                        <div class="col-sm-10">
                            <select
                                name="payment_woovi_order_status_when_paid_id" id="input-order-status"
                                class="form-control"
                            >
                                {% for order_status in order_statuses %}
                                    <option
                                        value="{{ order_status.order_status_id }}"
                                        {% if order_status.order_status_id == payment_woovi_order_status_when_paid_id %}
                                        selected="selected"
                                        {% endif %}
                                    >
                                        {{ order_status.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label
                            for="input-notify-customer"
                            class="col-sm-2 control-label"
                        >
                            {{ lang["Notify customer when order is paid?"] }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_woovi_notify_customer" id="input-status" class="form-control">
                                {% if payment_woovi_notify_customer %}
                                    <option value="1" selected="selected">{{ text_yes }}</option>
                                    <option value="0">{{ text_no }}</option>
                                {% else %}
                                    <option value="1">{{ text_yes }}</option>
                                    <option value="0" selected="selected">{{ text_no }}</option>
                                 {% endif %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label
                            for="input-tax-id-custom-field-id"
                            class="col-sm-2 control-label"
                        >
                            {{ lang["Which custom field to use for CPF/CNPJ?"] }}
                        </label>
                        <div class="col-sm-10">
                            <select
                                name="payment_woovi_tax_id_custom_field_id" id="input-tax-id-custom-field-id"
                                class="form-control"
                            >
                                <option value="">{{ lang["None"] }}</option>

                                {% for custom_field in custom_fields %}
                                    <option
                                        value="{{ custom_field.custom_field_id }}"
                                        {% if custom_field.custom_field_id == payment_woovi_tax_id_custom_field_id %} selected="selected"{% endif %}
                                    >
                                        {{ custom_field.name }}
                                    </option>
                                {% endfor %}
                            </select>
                            
                            <a href="{{ create_custom_field_route }}">
                                {{ lang["Create an custom field here."] }}
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{ components["footer"] }}
